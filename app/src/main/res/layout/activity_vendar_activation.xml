<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VendarActivation">

    <LinearLayout
       android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/active_code_layout"
        android:orientation="vertical">
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="Vendor Activation"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        />
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Enter Your 4 Digit Activation Code"
        android:textColor="@color/black"

        />

    <EditText
        android:id="@+id/activationCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="30sp"
        android:gravity="center"
        android:maxLength="4"
        android:inputType="number"
        android:layout_marginTop="20sp" />

    <TextView
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Call On This Number For Getting Your Activation Code"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginHorizontal="40dp"
        />
        <TextView
            android:id="@+id/tv_active_code"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="+919116156256"
            android:textStyle="bold"
            android:textColor="#176DB3"
            android:textSize="16sp"
            android:layout_marginHorizontal="40dp"
            />
        <ImageButton
            android:id="@+id/btn_active_code"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/next"
            android:background="@drawable/round_black"/>




    </LinearLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/vendor_aleart"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready to be Vendor"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:textSize="@dimen/_14ssp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request to convert your account client to vendor"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:textSize="@dimen/_12ssp"
            />
        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_request"
            android:background="@drawable/capsule_background"
            android:text="click here"
            android:paddingHorizontal="@dimen/_20sdp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"

            />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/vendor_alert_relative_layout"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="You have some pending amount!"
            android:layout_gravity="center"
            android:textColor="@color/red"
            android:gravity="center"/>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="Pay your pending amount first."
            android:textColor="@color/red"
            android:layout_gravity="center"
            android:gravity="center"/>
        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>
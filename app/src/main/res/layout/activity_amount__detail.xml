<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Amount_Detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/lnt"
        android:padding="@dimen/_8sdp"
        android:orientation="horizontal"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due Total"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#E6E2E2"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/due_total"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:text="due_total"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/lnt1"
        android:padding="@dimen/_8sdp"
        android:orientation="horizontal"

        android:layout_below="@+id/lnt"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Amount Detail"/>


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#E6E2E2"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amountDetail"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:text="amountDetail"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/lnt1"
        android:padding="@dimen/_8sdp"
        android:orientation="horizontal"
        android:id="@+id/lnt2"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paid Amount"/>


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#E6E2E2"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/paid_amount"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:text="paid_amount"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp"
        android:id="@+id/lnt3"
        android:orientation="horizontal"
        android:layout_below="@+id/lnt2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount:"/>



        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#E6E2E2"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/total_amount"
            android:text="total_amount"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/lnt3"
        android:orientation="horizontal"
        android:padding="@dimen/_8sdp"

        android:id="@+id/lnt4"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due Amount:"/>



        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#E6E2E2"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/due_amount"
            android:text="due_amount"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/lnt4"
        android:padding="@dimen/_8sdp"

        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay Date:"/>



        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#E6E2E2"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pay_date"
            android:text="pay_date"
            android:layout_below="@+id/lnt1"
            />

    </LinearLayout>

</RelativeLayout>
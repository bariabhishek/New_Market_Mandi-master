<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">





    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:padding="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    >
<TextView
    android:id="@+id/Q_productname"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:text="Product name"
    android:layout_centerVertical="true"
    android:layout_gravity="center"
   android:layout_marginHorizontal="10dp"
    android:textColor="#000"/>

    <ImageView
      android:layout_toRightOf="@id/Q_productname"

        android:id="@+id/Q_minus_button"
        android:layout_width="25dp"
        android:layout_centerVertical="true"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:src="@drawable/minus"/>
    <TextView
        android:layout_toRightOf="@id/Q_minus_button"
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:visibility="gone"
        android:layout_marginHorizontal="10dp"/>
    <EditText
        android:layout_toRightOf="@id/tv"
        android:id="@+id/Q_editext"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:hint="0 kg"
        android:inputType="numberDecimal"
        android:lines="1"
        android:maxLength="5"
        android:gravity="center"
        android:layout_marginHorizontal="5dp"
        android:layout_gravity="center"/>
    <ImageView
        android:layout_toRightOf="@id/Q_editext"
        android:id="@+id/Q_add_button"
        android:tint="#050505"
    android:layout_centerVertical="true"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginRight="15dp"
        android:src="@drawable/square_add_button"/>



    <TextView

        android:layout_toRightOf="@id/Q_add_button"
        android:id="@+id/rupeetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="kg"
        android:visibility="gone"
        android:layout_gravity="center"
        android:textSize="15dp"/>


    <ImageView
        android:layout_toRightOf="@id/rupeetext"
        android:id="@+id/delete"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_delete_black_24dp"/>

    <TextView
        android:layout_toRightOf="@id/delete"
        android:id="@+id/Q_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10000"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:textColor="#000"
        android:layout_marginRight="10dp"
        android:textSize="16dp"/>
</RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Rate">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleRate"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomlayout">

    </android.support.v7.widget.RecyclerView>

    <TextView

        android:id="@+id/emptyRecycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:textSize="@dimen/_20sdp"
        android:text="No Data Avilable"/>
    <LinearLayout
        android:id="@+id/bottomlayout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="6"
        android:background="#7A7979"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_text_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Products"
            android:textColor="#fff"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/history_text_activity"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="Order"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/mini_quan_axy"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="Coustomer"
            android:gravity="center"
            />

    </LinearLayout>

</RelativeLayout>
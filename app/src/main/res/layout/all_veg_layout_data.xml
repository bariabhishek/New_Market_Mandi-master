<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
   android:id="@+id/layoutSelect"
    android:clickable="true"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">



        <android.support.v7.widget.CardView
            android:id="@+id/cardViewClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="2dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="1dp"

            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_4sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:background="@color/white"
                android:weightSum="10"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/a_vegi"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="70dp"
                    android:src="@drawable/whitepotato" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/a_vaginame"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:textStyle="bold"
                    android:text="Potato"
                    android:textColor="#000"
                    />

                <TextView
                    android:id="@+id/tv_prcie_show"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:text="Slect Item"
                    android:textColor="#83181717"
                    android:textSize="@dimen/_10ssp"/>

                    <TextView
                        android:id="@+id/tv_show_prcie_amount"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:text="0kg"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="#83181717"
                    />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/bg_of_add_sub"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_remove_black_24dp"
                    android:id="@+id/Q_minus_button"/>


                    <TextView
                        android:id="@+id/Q_editext"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#83181717"
                        android:text="0"
                       />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_black_24dp"
                        android:id="@+id/Q_add_button"/>


                </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycle8"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>

               <!--     <EditText
                        android:id="@+id/edittext"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:maxLines="1"

                        android:inputType="number"
                        android:hint="Quantity"
                        android:visibility="gone"
                        android:maxLength="4"/>
-->


            </LinearLayout>
        </android.support.v7.widget.CardView>





</LinearLayout>
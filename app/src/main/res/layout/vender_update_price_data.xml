<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main_lay"
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/vendor_price_card"

        android:layout_gravity="center"

        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="1dp"
            card_view:cardUseCompatPadding="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp">

                    <ImageView
                        android:id="@+id/a_vegi"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/whitepotato" />


                    <ImageView
                        android:layout_gravity="right|top"
                        android:id="@+id/delete007"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentEnd="true"

                        android:src="@drawable/ic_clear_black_24dp"
                        android:tint="@color/red"
                        android:visibility="gone"
                        android:layout_alignParentRight="true" />




                </RelativeLayout>




                <TextView
                    android:id="@+id/a_vaginame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:lines="2"
                    android:padding="3dp"
                    android:textStyle="bold"
                    android:background="#A90A0A0A"
                    android:textColor="#fff"
                    android:text="Potato"
                    />

                <TextView
                    android:id="@+id/a_additem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="#4CAF50"
                    android:text="Slect Item"
                    android:textColor="#fff" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/a_additemremove"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:gravity="center"
                        android:background="#F44336"
                        android:visibility="gone"
                        android:text="42$"
                        android:textColor="#fff" />

                    <EditText
                        android:id="@+id/edittext2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edittext_background"
                        android:gravity="center"
                        android:hint="Price"
                        android:inputType="number"
                        android:maxLines="1"
                        android:visibility="visible" />



                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>


</LinearLayout>